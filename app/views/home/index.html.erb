<h1>Welcome to Hsoub/IO</h1>
<% if user_signed_in? %>
  <h1>Hello <%= current_user.email %></h1>
  <nav>
    <ul>
      <li><%= link_to t("post"), posts_path %></li>
      <li><%= link_to t("new_community"), new_community_path %></li>
      <li><%= link_to t("my_account"), u_path(current_user) %></li>
      <li><%= link_to t("edit_account"), edit_user_registration_path%></li>
      <li><%= link_to t("new_topic"), new_topic_path %></li>
      <li><%= link_to t("sign_out"), destroy_user_session_path, method: :delete %></li>
    </ul>
  </nav>
  <p class="reputation">السمعة: <%= current_user.reputation %></p>
<% else %>
  <h1>Welcome, Guest!</h1>
  <%= link_to t("log_in"), new_user_session_path %>
<% end %>
